mixin blockBox(caption,span,captionsecond="null",desc)
	.block-box
		.block-box-title
			if caption!="null"
				.block-box-caption= caption
			.block-box-caption-span= span
			if captionsecond!="null"
				.block-box-caption-caption= captionsecond
		if desc
			p.block-box-desc= desc

mixin serviceItem(src=src,content)
	.service-img-item
		img(src=src).service-img
		.service-content
			.service-title= content
			.service-icon-list
				i.fa.fa-star.service-icon-item
				i.fa.fa-star.service-icon-item
				i.fa.fa-star.service-icon-item
				i.fa.fa-star.service-icon-item
				i.fa.fa-star.service-icon-item

mixin featureItem(title="Word Load",content="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",link="Learn more",src="#")
	.feature-card-item
		.feature-card-title=title 
		.feature-card-content=content
		a(href=src).feature-card-link=link

mixin clientItem()
	.client-item
        img(src=src).client-img
        .client-content
          .client-content-title= title
          .client-content-text= text
          .client-content-list
            i.fa.fa-star.service-icon-item
            i.fa.fa-star.service-icon-item
            i.fa.fa-star.service-icon-item
            i.fa.fa-star.service-icon-item
            i.fa.fa-star.service-icon-item
          .client-author= author
          .client-job= job
